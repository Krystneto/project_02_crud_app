{{#each card}}
<div class="container">
  <div id="card">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-1" id="name">{{this.name}}</div>
      <div class="col-xs-2" id="spot_number">{{this.spot_number}}</div>
      <div class="col-xs-2" id="spot_type">{{this.spot_type}}</div>
    </this
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1" id="aura">{{this.aura}}</div>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1" id="type-img">Image</div>
    </div>
    <div class="row">
      <div class="col-xs-5 col-xs-offset-1" id="type">{{this.type}}</div>
      <div class="col-xs-5" id="group">{{this.group}}</div>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1" id="ability">{{this.ability}}</div>
    </div>
    <div class="row">
      <div class="col-xs-6 col-xs-offset-1" id="burst">Burst: {{this.burst}}</div>
      <div class="col-xs-2" id="attack">{{this.attack}}</div>
      <div class="col-xs-2" id="defense">{{this.defense}}</div>
    </div>
  </div>
  <button class="edit btn-warning">Edit</button>
  <button class="delete btn-danger">Delete</button>
</div>
{{/each}}


{{!-- browser won't render template tag --}}
