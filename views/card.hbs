<div class="container">
  <div id="card">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-1" id="name">{{card.name}}</div>
      <div class="col-xs-2" id="spot_number">{{card.spot_number}}</div>
      <div class="col-xs-2" id="spot_type">{{card.spot_type}}</div>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1" id="aura">{{card.aura}}</div>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1" id="type-img">Image</div>
    </div>
    <div class="row">
      <div class="col-xs-5 col-xs-offset-1" id="type">{{card.type}}</div>
      <div class="col-xs-5" id="group">{{card.group}}</div>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1" id="ability">{{card.ability}}</div>
    </div>
    <div class="row">
      <div class="col-xs-6 col-xs-offset-1" id="burst">Burst: {{card.burst}}</div>
      <div class="col-xs-2" id="attack">{{card.attack}}</div>
      <div class="col-xs-2" id="defense">{{card.defense}}</div>
    </div>
  </div>
</div>

{{!-- browser won't render template tag --}}
<template>
<input type="text" value="{{card.defense}}">
</template>

<div class="container">
  <div class="row">
    <button class="edit btn-warning">Edit</button>
    <button class="delete btn-danger">Delete</button>
  </div>
</div>









