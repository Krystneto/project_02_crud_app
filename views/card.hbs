{{#each card}}
<div class="container">
  <div id="card">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-1" id="name">{{this.name}}</div>
      <div class="col-xs-1 col-xs-offset-1" id="spot_number">{{this.spot_number}}</div>
      <div class="col-xs-1" id="spot_type">{{this.spot_type}}</div>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1" id="aura">{{this.aura}} Aura</div>
    </div>
    <div class="row">
      <div class="col-xs-9 col-xs-offset-1" id="type-img"></div>
    </div>
    <div class="row">
      <div class="col-xs-5 col-xs-offset-1" id="type">{{this.type}}</div>
      <div class="col-xs-5" id="group">{{this.group}}</div>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1" id="ability-box">{{this.ability}}</div>
    </div>
    <div class="row">
      <div class="col-xs-4" id="burst">Burst: {{this.burst}}</div>
      <div class="col-xs-4" id="attack">Atk: {{this.attack}}</div>
      <div class="col-xs-4" id="defense">Def: {{this.defense}}</div>
    </div>
  </div>
    <form action="/update/{{this.name}}" method="GET">
      <button class="edit btn-warning">Edit</button>
    </form>
    <button class="delete btn-danger">Delete</button>
</div>
{{/each}}










